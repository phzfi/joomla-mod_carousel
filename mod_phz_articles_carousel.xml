<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site"
	method="upgrade">
	<name>MOD_PHZ_ARTICLES_CAROUSEL</name>
    <creationDate>2014</creationDate>
    <author>Pharazon Ab</author>
    <authorEmail>phz@phz.fi</authorEmail>
    <authorUrl>http://www.phz.fi</authorUrl>
    <version>1.0.0</version>
	<description>MOD_PHZ_ARTICLES_CAROUSEL_XML_DESCRIPTION</description>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<files>
		<filename module="mod_phz_articles_carousel">mod_phz_articles_carousel.php</filename>
		<folder>tmpl</folder>
        <folder>tmpl/css</folder>
        <folder>tmpl/js</folder>
		<folder>languages</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_phz_articles_carousel.xml</filename>
        <filename>LICENSE.txt</filename>
        </files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.mod_phz_articles_carousel.ini</language>
		<language tag="en-GB">en-GB.mod_phz_articles_carousel.sys.ini</language>
		<language tag="fi-FI">fi-FI.mod_phz_articles_carousel.ini</language>
        <language tag="fi-FI">fi-FI.mod_phz_articles_carousel.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
		      <fieldset name="basic">
                <field
                    name="title"
                    type="text"
                    label="MOD_PHZ_ARTICLES_CAROUSEL_FIELD_TITLE_LABEL"
                    description="MOD_PHZ_ARTICLES_CAROUSEL_FIELD_TITLE_DESC" />
		      <field
                    name="catid"
                    type="category"
                    extension="com_content"
                    multiple="true"
                    size="10"
                    default=""
                    label="JCATEGORY"
                    description="MOD_PHZ_ARTICLES_CAROUSEL_FIELD_CATEGORY_DESC" >
                    <option value="">JOPTION_ALL_CATEGORIES</option>
                </field>
                <field
                    name="count"
                    type="text"
                    default="5"
                    label="MOD_PHZ_ARTICLES_CAROUSEL_FIELD_COUNT_LABEL"
                    description="MOD_PHZ_ARTICLES_CAROUSEL_FIELD_COUNT_DESC" />
                <field
                    name="show_featured"
                    type="list"
                    default=""
                    label="MOD_PHZ_ARTICLES_CAROUSEL_FIELD_FEATURED_LABEL"
                    description="MOD_PHZ_ARTICLES_CAROUSEL_FIELD_FEATURED_DESC">
                    <option
                        value="">JSHOW</option>
                    <option
                        value="0">JHIDE</option>
                    <option
                        value="1">MOD_PHZ_ARTICLES_CAROUSEL_VALUE_ONLY_SHOW_FEATURED</option>
                </field>

                <field
                    name="ordering"
                    type="list"
                    default="published"
                    label="MOD_PHZ_ARTICLES_CAROUSEL_ORDERING_LABEL"
                    description="MOD_PHZ_ARTICLES_CAROUSEL_ORDERING_DESC">
                    <option
                        value="o_asc">MOD_PHZ_ARTICLES_CAROUSEL_ORDERING</option>
                    <option
                        value="c_dsc">MOD_PHZ_ARTICLES_CAROUSEL_RECENT_ADDED</option>
                    <option
                        value="m_dsc">MOD_PHZ_ARTICLES_CAROUSEL_RECENT_MODIFIED</option>
                    <option
                        value="p_dsc">MOD_PHZ_ARTICLES_CAROUSEL_RECENT_PUBLISHED</option>
                    <option
                        value="mc_dsc">MOD_PHZ_ARTICLES_CAROUSEL_RECENT_TOUCHED</option>
                </field>

                <field
                    name="user_id"
                    type="list"
                    default="0"
                    label="MOD_PHZ_ARTICLES_CAROUSEL_USER_LABEL"
                    description="MOD_PHZ_ARTICLES_CAROUSEL_USER_DESC">
                    <option
                        value="0">MOD_PHZ_ARTICLES_CAROUSEL_ANYONE</option>
                    <option
                        value="by_me">MOD_PHZ_ARTICLES_CAROUSEL_ADDED_BY_ME</option>
                    <option
                        value="not_me">MOD_PHZ_ARTICLES_CAROUSEL_NOTADDED_BY_ME</option>
                </field>
		      <field
                    name="background_color"
                    type="color"
                    default="#FFF000"
                    label="MOD_PHZ_ARTICLES_CAROUSEL_BGCOLOR_LABEL"
                    description="MOD_PHZ_ARTICLES_CAROUSEL_BGCOLOR_DESC" />
                <field
                    name="height"
                    type="text"
                    label="MOD_PHZ_ARTICLES_CAROUSEL_HEIGHT_LABEL"
                    description="MOD_PHZ_ARTICLES_CAROUSEL_HEIGHT_DESC" />
                <field
                    name="font_color"
                    type="text"
                    default="white"
                    label="MOD_PHZ_ARTICLES_CAROUSEL_FONT_COLOR_LABEL"
                    description="MOD_PHZ_ARTICLES_CAROUSEL_FONT_COLOR_DESC" />
                <field
                    name="opacity"
                    type="integer"
                    default="30"
                    first="0"
                    last="100"
                    step="1"
                    label="MOD_PHZ_ARTICLES_CAROUSEL_DARKEN_LABEL"
                    description="MOD_PHZ_ARTICLES_CAROUSEL_DARKEN_DESC" />
            </fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
